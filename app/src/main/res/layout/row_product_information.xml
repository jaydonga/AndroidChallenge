<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@color/white_color"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/iv_row_products_image"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_row_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black_color"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toEndOf="@+id/iv_row_products_image"
        app:layout_constraintTop_toTopOf="@+id/iv_row_products_image"
        tools:text="TextView" />

    <TextView
        android:id="@+id/txt_row_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_color"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="@+id/txt_row_product_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_row_product_name"
        tools:text="TextView" />

    <TextView
        android:id="@+id/txt_row_product_actual_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/green_color"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toStartOf="@+id/txt_row_product_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_row_product_price"
        tools:text="TextView" />

    <TextView
        android:id="@+id/txt_row_product_discount_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black_color"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@+id/txt_row_product_actual_price"
        app:layout_constraintTop_toBottomOf="@+id/txt_row_product_price"
        tools:text="TextView" />

</android.support.constraint.ConstraintLayout>